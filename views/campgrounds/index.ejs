<% include ../partials/header %>


<div class="container">    
     <header class="jumbotron">
          <div class="container">
               <h1>Welcome Campground page</h1>
               <p>View our campgrounds image from all over the world</p>
               <p>
                 <a class="btn btn-primary btn-large"  href="/campgrounds/new ">add new campground</a>
               </p>
           </div>
     </header>

   <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(image){ %>
           <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img  src="<%= image.image %>" alt="campground" >
          <h4 ><%= image.name  %></h4>
          <p>
              <a class="btn btn-primary" href="/campgrounds/<%= image._id %>">More Info</a>
          </p>
         </div>
          <!--<div class="img-thumbnail">-->
          <!--    <img src="<%= image.image %>">-->
          <!--   -->
          <!--</div>-->
           </div>
        <% }); %>
    </div>
</div>    
<% include ../partials/footer %>
